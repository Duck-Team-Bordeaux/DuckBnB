<div class="show-grid-container">

  <div class="show-duck-box">
    <h1><%= @duck.name %></h1>
    <p><%= @duck.description %></p>
    <div class="price-item">203$ <span> per night </span></div>
    <div class="show-user-box">
      <%= image_tag "macron.png", class: 'avatar-picture' %>
      <div>
        <h4>Emanuel Macron</h4>
        <p>57 bookings <p>
        <p>3 ducks <p>
      </div>
    </div>
  </div>

  <div class="show-img-box">
    <img src="https://images.unsplash.com/photo-1559715541-5daf8a0296d0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1372&q=80" alt="" class="show-duck-picture">
    <i class="fa-regular fa-heart wishlist-icon"></i>
  </div>

  <div class="show-box-order">
    <h2>My order</h2>
    <div class="show-my-order-grid">
      <div class="calendar">
        <%= image_tag "fake-calendar.png" %>
      </div>
      <div class="recap-order">
        <div>
          <p> 65€ x 7 nuit</p>
          <p> 433 €</p>
        </div>
        <div>
          <p> Taxes</p>
          <p> 24 €</p>
        </div>
        <div>
          <p class="total"> Total</p>
          <p class="total"> 567 €</p>
        </div>
      </div>
    </div>
    <div class="btn-order">Oder my duck</div>
  </div>

  <div class="show-box-review">
    <h2>Reviews</h2>
  </div>


</div>
