<div class="container-filter">
  <%= form_with url: ducks_path, method: :get, class: "search-bar" do %>
    <%= text_field_tag :query,
        params[:query],
        class: "input-search",
        placeholder: "Trouve ton canard..."
      %>
    <%= submit_tag "Rechercher", name: "", class: "button-search custom-primary-btn" %>



  <% end %>
  <button class="custom-primary-btn">
    <i class="fa-solid fa-filter"></i>
    <p>Filtres</p>
  </button>
</div>
